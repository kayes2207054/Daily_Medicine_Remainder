<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- JavaFX + FXML Migration â€” Reminders View -->

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.fx.ReminderViewController"
      spacing="12" style="-fx-background-color: #ECF0F1;">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <HBox spacing="10">
        <Label text="Reminders" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Mark Taken" onAction="#handleMarkTaken"/>
        <Button text="Mark Missed" onAction="#handleMarkMissed"/>
    </HBox>

    <TableView fx:id="reminderTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="medicineCol" text="Medicine" prefWidth="160"/>
            <TableColumn fx:id="timeCol" text="Time" prefWidth="120"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
        </columns>
    </TableView>

    <Label fx:id="status" text="" style="-fx-text-fill: #7F8C8D;"/>
</VBox>
