<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- JavaFX + FXML Migration â€” Phase 2 -->
<!-- MainDashboard: Minimal layout with side nav, content area, status bar -->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.fx.MainDashboardController"
            prefWidth="1200" prefHeight="700">

    <left>
        <VBox spacing="6" style="-fx-background-color: #2980B9;" prefWidth="220">
            <padding><Insets top="20" right="10" bottom="20" left="10"/></padding>
            
            <Label text="DailyDose" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Medicine Manager" style="-fx-text-fill: #DCDCDC; -fx-font-size: 11px;"/>
            
            <Button text="Home" onAction="#showHome" maxWidth="Infinity" prefHeight="45"/>
            <Button text="Medicines" onAction="#showMedicines" maxWidth="Infinity" prefHeight="45"/>
            <Button text="Reminders" onAction="#showReminders" maxWidth="Infinity" prefHeight="45"/>
            <Button text="Inventory" onAction="#showInventory" maxWidth="Infinity" prefHeight="45"/>
            <Button text="History" onAction="#showHistory" maxWidth="Infinity" prefHeight="45"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button text="Settings" onAction="#showSettings" maxWidth="Infinity" prefHeight="45"/>
            <Button text="Help" onAction="#showHelp" maxWidth="Infinity" prefHeight="45"/>
            <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity" prefHeight="45"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ECF0F1;"/>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-background-color: #34495E;">
            <padding><Insets top="5" right="10" bottom="5" left="10"/></padding>
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
