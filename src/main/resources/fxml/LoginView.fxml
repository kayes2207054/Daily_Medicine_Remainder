<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- JavaFX + FXML Migration â€” Phase 1 -->
<!-- LoginView: Basic login screen in FXML -->

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.fx.LoginViewController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #2C3E50;">
    
    <padding>
        <Insets top="40" right="60" bottom="40" left="60"/>
    </padding>
    
    <!-- Title -->
    <Label text="DailyDose" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
    <Label text="Medicine Companion" style="-fx-text-fill: #BDC3C7; -fx-font-size: 14px;"/>
    
    <Region VBox.vgrow="SOMETIMES" minHeight="20"/>
    
    <!-- Username Field -->
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Username:" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        <TextField fx:id="usernameField" promptText="Enter username" prefWidth="300" prefHeight="35"/>
    </VBox>
    
    <!-- Password Field -->
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Password:" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        <PasswordField fx:id="passwordField" promptText="Enter password" prefWidth="300" prefHeight="35"/>
    </VBox>
    
    <!-- Error Label -->
    <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 12px;" visible="false"/>
    
    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="120" prefHeight="35"/>
        <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup"
                style="-fx-background-color: #95A5A6; -fx-text-fill: white;"
                prefWidth="120" prefHeight="35"/>
    </HBox>
    
    <!-- TODO Phase 2: Add "Forgot Password" link -->
    <!-- TODO Phase 3: Add modern glassmorphic styling with CSS -->
    <!-- TODO Phase 4: Add validation feedback -->
    
</VBox>
