<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- JavaFX + FXML Migration â€” Medicines View -->

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.fx.MedicineViewController"
      spacing="12" style="-fx-background-color: #ECF0F1;">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <HBox spacing="10">
        <Label text="Medicines" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Edit" onAction="#handleEdit"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>

    <TableView fx:id="medicineTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="180"/>
            <TableColumn fx:id="dosageCol" text="Dosage" prefWidth="120"/>
            <TableColumn fx:id="scheduleCol" text="Schedule" prefWidth="200"/>
        </columns>
    </TableView>

    <Label fx:id="status" text="" style="-fx-text-fill: #7F8C8D;"/>
</VBox>
